<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".btn_radios">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Componentes"
            android:textColor="#2196F3"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0063" />

        <EditText
            android:id="@+id/txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Your name"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="95dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toggle Button"
            android:textSize="20sp" />

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="Activo"
            android:textOff="Inactivo"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="161dp" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:text="Switch"
            android:textOff="Off"
            android:textOn="On"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:text="Image Button"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="310dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_menu_gallery" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:text="Checkbox"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="313dp"
            android:layout_height="36dp"
            android:text="Opcion 1" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="315dp"
            android:layout_height="36dp"
            android:text="Opcion 2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:text="Radio Buttons"
            android:textSize="20sp" />

        <RadioGroup
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opcion 1" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opcion 2" />
        </RadioGroup>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:background="#0683E6"/>

        <Button
            android:id="@+id/btnBack"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:text="Regresar"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>